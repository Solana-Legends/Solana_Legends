{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* ðŸ”¹ Reglas de control */
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowJs": true,
    "noUnusedLocals": false,
    "strictNullChecks": false,
    "strict": true,

    /* ðŸ”¹ ConfiguraciÃ³n de mÃ³dulos */
    "module": "ESNext",              // O "Node16", "NodeNext"
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",  // O "Bundler"

    /* ðŸ”‘ ConfiguraciÃ³n JSX para React */
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["react", "react-dom"]
  }
}
