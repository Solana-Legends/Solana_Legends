{
  "compilerOptions": {
    /* ðŸ”¹ Objetivo y librerÃ­as */
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],

    /* ðŸ”¹ MÃ³dulos */
    "module": "ESNext",
    "moduleResolution": "node",   // âœ… modo moderno para Vite/ESBuild
    "moduleDetection": "force",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,

    /* ðŸ”¹ JSX para React */
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* ðŸ”¹ Tipos globales */
    "types": ["react", "react-dom", "node"],

    /* ðŸ”¹ Control de tipado (mÃ¡s seguro y limpio) */
    "strict": true,                  // Activa todas las comprobaciones estrictas
    "noImplicitAny": true,           // Evita que se cuelen any implÃ­citos
    "noUnusedLocals": true,          // Marca variables no usadas
    "noUnusedParameters": true,      // Marca parÃ¡metros no usados
    "strictNullChecks": true,        // Control estricto de null/undefined
    "skipLibCheck": true,            // Ignora chequeo de librerÃ­as externas
    "noFallthroughCasesInSwitch": true, // Previene errores en switch sin break

    /* ðŸ”¹ Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    "tailwindcss.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
